html
  head
    title #{title}
    link(rel='stylesheet', href='/css/materialize.css')
    link(rel='stylesheet', href='/css/style.css')
    meta(charset='UTF-8', name='viewport', content='width=device-width, initial-scale=1')
    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/materialize.js')
    script(type='text/javascript', src='/js/app.js')
  body.form
    .container
      .row
          form
            .row.center-align
                h5 Which Exam Would You Like To Take?
            .row
                .col.s6
                    a.btn-large.waves-effect.waves-dark.orange.disabled(href='/login/cs101') <b>CS 101</b> EXAM
                        i.material-icons.right mode_edit
                .col.s6
                    a.btn-large.waves-effect.waves-dark.red(href='/login/cs201') <b>CS 201</b> EXAM
                        i.material-icons.right mode_edit
            .card
                .card-image
                    img.responsive-image(src='/images/alfred.jpg', height='50%')
      include ack
